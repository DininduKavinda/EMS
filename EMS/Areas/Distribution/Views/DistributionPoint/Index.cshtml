@{
    ViewData["Title"] = "Index";
}
@model DistributionPoint
<div class="container">
    <div class="row pt-4 pb3">
        <div class="col-6">
            <h1 class="text-primary">Basic Salary Info</h1>
        </div>

        <!-- Modal -->

        <div class="col-6 text-end">
            <a asp-controller="Outlet" asp-action="Upsert" data-toggle="modal" data-target="#exampleModal" class="btn btn-primary add-new-button">
                <i class="bi bi-plus-circle"></i> Add New
            </a>
        </div>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Customer Form</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form asp-action="Upsert" method="post" class="my-4">
                        <div class="modal-body">
                            <div class="row mt-4">
                                <div class="col-md-12">
                                    <input asp-for="Id" value="0" />
                                    
                                    <div class="form-group">
                                        <label asp-for="Name" class="control-label"></label>
                                        <input asp-for="Name" class="form-control">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Address" class="control-label"></label>
                                        <input asp-for="Address" class="form-control">
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Description" class="control-label"></label>
                                        <input asp-for="Description" class="form-control">
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <table id="tblData" class="table table-striped" style="width:100%">
        <thead>

            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
    </table>
    @section Scripts {
        <script src="~/js/DistributionPoint.js"></script>
        <script type="text/javascript">
            $(document).on('click', '.add-new-button', function () {
                $("#exampleModal form")[0].reset();
                $("#exampleModal").modal({ backdrop: 'static' });
            });
        </script>
    }
</div>

