@{
    ViewData["Title"] = "Index";
}
@model CustomerVM
<div class="container">
    <div class="row pt-4 pb3">
        <div class="col-6">
            <h1 class="text-primary">Basic Salary Info</h1>
        </div>


    <!-- Modal -->
    
        <div class="col-6 text-end">
            <a asp-controller="Customer" asp-action="Upsert" data-toggle="modal" data-target="#exampleModal" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New
            </a>
        </div>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                     <form asp-action="Upsert" method="post" class="my-4" >
                    <div class="modal-body">
                        <div class="row mt-4">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Customer.Customer_Name" class="control-label"></label>
                                    <input asp-for="Customer.Customer_Name"  class="form-control">
                                    <span asp-validation-for="Customer.Customer_Name" class="text-danger"></span>  
                                </div>
                                <div class="form-group">
                                    <label asp-for="Customer.Customer_Shop_Name" class="control-label"></label>
                                    <input asp-for="Customer.Customer_Shop_Name" class="form-control">
                                    <span asp-validation-for="Customer.Customer_Shop_Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Customer.Customer_Address" class="control-label"></label>
                                    <input asp-for="Customer.Customer_Address" class="form-control">
                                    <span asp-validation-for="Customer.Customer_Address" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Customer.Customer_Road" class="control-label"></label>
                                    <input asp-for="Customer.Customer_Road" class="form-control">
                                    <span asp-validation-for="Customer.Customer_Road" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Customer.Customer_CityId" class="control-label"></label>
                                    <select asp-for="@Model.Customer.Customer_CityId" asp-items="@Model.CityList" class="form-control">
                                        <option disabled value="0">Select </option>
                                    </select>
                                    <span asp-validation-for="Customer.Customer_CityId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <table id="tblData" class="table table-striped" style="width:100%">
        <thead>

            <tr>
                <th>ID</th>
                <th>Customer_Shop_Name</th>
                <th>Customer_Name</th>
                <th>Customer_Address</th>
                <th>Customer_Contact_No</th>
                <th>Action</th>
            </tr>
        </thead>
    </table>
    @section Scripts {
        <script src="~/js/Customer.js"></script>
       
    }
</div>

